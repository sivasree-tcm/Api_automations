{
  "scenario": "Get Connections API Validation",
  "testCases": [

    {
      "tcId": "TC_CONN_01",
      "name": "Valid request - Super Admin",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 200,
      "request": {
        "userId": "33",
        "orgId": "1"
      }
    },

    {
      "tcId": "TC_CONN_02",
      "name": "Valid request - Admin",
      "role": "ADMIN",
      "expectedStatusCode": 200,
      "request": {
        "userId": "33",
        "orgId": "1"
      }
    },

    {
      "tcId": "TC_CONN_03",
      "name": "Unauthorized user",
      "role": "END_USER",
      "expectedStatusCode": 403,
      "request": {
        "userId": "33",
        "orgId": "1"
      }
    },

    {
      "tcId": "TC_CONN_04",
      "name": "Missing orgId",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 400,
      "request": {
        "userId": "33",
        "orgId": null
      }
    },

    {
      "tcId": "TC_CONN_05",
      "name": "Invalid token",
      "role": "INVALID",
      "expectedStatusCode": 401,
      "request": {
        "userId": "33",
        "orgId": "1"
      }
    }
  ]
}