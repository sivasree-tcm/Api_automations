{
  "scenario": "Get Connections API Validation",
  "testCases": [

    {
      "tcId": "TC_CONN_01",
      "name": "Valid request - Super Admin",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 200,
      "request": {
        "userId": 32,
        "orgId": 1
      }
    },

    {
      "tcId": "TC_CONN_02",
      "name": "Valid request - Admin",
      "role": "ADMIN",
      "expectedStatusCode": 200,
      "request": {
        "userId": 37,
        "orgId": 1
      }
    },

    {
      "tcId": "TC_CONN_03",
      "name": "Unauthorized user",
      "role": "END_USER",
      "expectedStatusCode": 401,
      "request": {
        "userId": 40,
        "orgId": 1
      }
    },

    {
      "tcId": "TC_CONN_04",
      "name": "Missing orgId",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 400,
      "request": {
        "userId": 32,
        "orgId": null
      }
    },

    {
      "tcId": "TC_CONN_05",
      "name": "Invalid token",
      "role": "SUPER_ADMIN",
      "authType": "INVALID",
      "expectedStatusCode": 401,
      "request": {
        "userId": 32,
        "orgId": 1
      }
    },
    {
      "tcId": "TC_CONN_06",
      "name": "Missing userId",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 400,
      "request": {
        "userId": "",
        "orgId": 1
      }
    },
    {
      "tcId": "TC_CONN_07",
      "name": "Invalid userId",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 400,
      "request": {
        "userId": "abc",
        "orgId": 1
      }
    },
    {
      "tcId": "TC_CONN_08",
      "name": "Invalid orgId",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 400,
      "request": {
        "userId": 32,
        "orgId": "abc"
      }
    },
    {
      "tcId": "TC_CONN_09",
      "name": "Pass userId as string",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 400,
      "request": {
        "userId": "32",
        "orgId": 1
      }
    },
    {
      "tcId": "TC_CONN_10",
      "name": "Pass orgId as string",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 400,
      "request": {
        "userId": "32",
        "orgId": "1"
      }
    },
    {
      "tcId": "TC_CONN_11",
      "name": "Missing token",
      "role": "SUPER_ADMIN",
      "authType": "MISSING",
      "expectedStatusCode": 401,
      "request": {
        "userId": 32,
        "orgId": 1
      }
    }
  ]
}