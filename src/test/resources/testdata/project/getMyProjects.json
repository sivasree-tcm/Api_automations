{
  "scenario": "Get My Projects API Validation",
  "testCases": [

    {
      "tcId": "TC_GMP_01",
      "name": "Get projects with valid userId",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 200,
      "request": { "userId": "33" }
    },

    {
      "tcId": "TC_GMP_02",
      "name": "Missing userId",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 400,
      "request": {}
    },

    {
      "tcId": "TC_GMP_03",
      "name": "userId as null",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 400,
      "request": { "userId": null }
    },

    {
      "tcId": "TC_GMP_04",
      "name": "Invalid userId",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 400,
      "request": { "userId": "99999" }
    },

    {
      "tcId": "TC_GMP_05",
      "name": "userId as number",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 200,
      "request": { "userId": 33 }
    },

    {
      "tcId": "TC_GMP_06",
      "name": "userId as empty string",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 400,
      "request": { "userId": "" }
    },

    {
      "tcId": "TC_GMP_07",
      "name": "userId with spaces",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 200,
      "request": { "userId": " 33 " }
    },

    {
      "tcId": "TC_GMP_08",
      "name": "Unauthorized request",
      "role": "NO_AUTH",
      "expectedStatusCode": 401,
      "request": { "userId": "33" }
    },

    {
      "tcId": "TC_GMP_09",
      "name": "Invalid token",
      "role": "INVALID",
      "expectedStatusCode": 401,
      "request": { "userId": "33" }
    },

    {
      "tcId": "TC_GMP_10",
      "name": "Token user mismatch",
      "role": "ADMIN",
      "expectedStatusCode": 403,
      "request": { "userId": "33" }
    },

    {
      "tcId": "TC_GMP_11",
      "name": "SQL injection",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 400,
      "request": { "userId": "' OR '1'='1" }
    },

    {
      "tcId": "TC_GMP_12",
      "name": "XSS injection",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 400,
      "request": { "userId": "<script>alert(1)</script>" }
    },

    {
      "tcId": "TC_GMP_13",
      "name": "Extra fields",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 200,
      "request": {
        "userId": "33",
        "extra": "test"
      }
    },

    {
      "tcId": "TC_GMP_14",
      "name": "Large payload",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 200,
      "request": {
        "userId": "33",
        "f1": "x",
        "f2": "x",
        "f3": "x"
      }
    },

    {
      "tcId": "TC_GMP_15",
      "name": "Empty payload",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 400,
      "request": {}
    },

    {
      "tcId": "TC_GMP_16",
      "name": "Invalid content type",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 415,
      "request": { "userId": "33" }
    },

    {
      "tcId": "TC_GMP_17",
      "name": "Multiple rapid requests",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 200,
      "request": { "userId": "33" }
    },

    {
      "tcId": "TC_GMP_18",
      "name": "User with no projects",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 200,
      "request": { "userId": "44" }
    },

    {
      "tcId": "TC_GMP_19",
      "name": "Malformed JSON",
      "role": "SUPER_ADMIN",
      "expectedStatusCode": 400,
      "request": "{ invalid json }"
    }
  ]
}
